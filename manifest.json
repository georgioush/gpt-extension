{
    "manifest_version": 3,
    "name": "OpenAI Request Extension",
    "version": "1.0",
    "description": "Azure OpenAI APIへのリクエストを送信する拡張機能",
    "permissions": ["storage", "activeTab", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "pic/icon16.png",
        "48": "pic/icon48.png",
        "128": "pic/icon128.png"
    }
}